@model ProjetoLanches.Models.Lanche

<div class="col-md-4">
    <p><img src="@Model.ImagemUrl" class="img-fluid" /></p>
    <h3>Preço : @Model.Preco.ToString("c")</h3>
    <a asp-controller="Lanche" asp-action="Details"
    asp-route-lancheId="@Model.Id">@Model.Nome</a>
    <p>@Model.DescricaoCurta</p>
    <div>
        <p class="button">
            <a class="btn btn-primary" id="carButton" asp-controller="CarrinhoCompra"
               asp-action="AdicionarItemCarrinhoCompra" asp-route-Id="@Model.Id">
              Incluir no carrinho
            </a>
        </p>
    </div>
</div>